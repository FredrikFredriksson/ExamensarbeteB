@model OrderViewModel
    <link href="~/css/AdminStyle.css" rel="stylesheet" />
<article class="card">
    <div class="card-info">

        <p id="Name">@Model.Name</p>
        <p id="Name">@Model.Address, @Model.ZipCode @Model.City</p>
        <p id="Name">@Model.Email</p>
        <p id="PhoneNumber">@Model.PhoneNumber</p>

        <p id="PaymentMethod">@Model.Payment</p>

    </div>
    <div class="card-products">
        <table class="content-table">
            <tr>
                <th>Produkt</th>
                <th>Antal</th>
                <th>Pris</th>
            </tr>
            <tr>
                <td>@Model.Product.Name</td>
                <td>@Model.Quantity</td>
                <td>@Model.Product.Price</td>
            </tr>
            @if (Model.Delivery == "Hemleverans")
            {
                <tr>
                    <td>Hemleverans</td>
                    <td></td>
                    <td>250</td>
                </tr>

            }
            <tr>
                <td>Totalt</td>
                <td></td>
                <td>@Model.TotalPrice</td>
            </tr>
        </table>
    </div>
    <a href="@Url.Action("Index", "Order")">Gå tillbaka</a>

    <a href="@Url.Action("ConfirmOrder", "Order", @Model)">Beställ</a>

</article>


