                            <li><a href="#">Test</a></li>
                        </ul>
                    </div>--><!----Category-List----->
                <!--</div>--><!--div-left-->
            <!--}
        }-->

        <div class="div-main">
            <div class="main-content">
                @RenderBody()
            </div><!---Main-content-->
        </div><!---div main-->
        <div class="clear"></div>
        <div class="div-footer">
            <p>Ängens gård</p>
            <p>Epost: <a href="mailto:angenbararp@gmail.com">Angensgard</a></p>
            <p>Instagram: <a href="https://www.instagram.com/bararpsloge/">Bararpsloge</a></p>
        </div>

    </div>


    @*<div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>*@


    <div class="clear"></div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AngensGard - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>--->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
