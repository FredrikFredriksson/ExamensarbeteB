@model Order
    <link href="~/css/AdminSheet.css" rel="stylesheet" />

<div class="div-message-container">
    <div class="message-header">
        <h3>Beställningen är tillagd</h3>
    </div>
    <div class="message-buttons">
        @using (Html.BeginForm("DeleteOrder", "Admin", new { id = Model.Id }, FormMethod.Post, true, new { onsubmit = "return confirm('Är du säker på att du vill ta bort ordern?');" }))
        {
            <input type="submit" value="Ta bort" class="msg-btn" />
        }
        <a href=@Url.Action("Index", "Admin")>Ok</a>
    </div>
</div>