
@model AdminViewModel

<link href="~/css/AdminSheet.css" rel="stylesheet" />

<h3>Administratörssidan</h3>


<table class="content-table">
    <tr>
        <th>Order Id</th>
        <th>Namn</th>
        <th>Datum</th>
        <th>Adress</th>
        <th>Status</th>
    </tr>

    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.Name</td>
            <td>@order.OrderDate</td>
            <td>@order.Address</td>
            <td>@order.OrderStatus</td>
            <td class="table-links">
                @Html.ActionLink("Ändra", "EditOrder", "Admin", new { id = order.Id })
            </td>
            <td class="table-links">
                @Html.ActionLink("Detaljer", "OrderDetails", "Admin", new { id = order.Id })
            </td>

            <!---Dont know why I need true or false as the 5th argument, but it works-->
            <td class="table-links">

                @using (Html.BeginForm("DeleteOrder", "Admin", new { id = order.Id }, FormMethod.Post, true, new { onsubmit = "return confirm('Är du säker på att du vill ta bort ordern?');" }))
                {
                    <input type="submit" value="Ta bort" class="buttonLink" />
                }

            </td>
        </tr>
    }
</table>

