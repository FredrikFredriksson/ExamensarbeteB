        <article class="admin-card">
            <div class="admin-text">
                <h3>Alla beställningar</h3>
                <h2>10st</h2>
            </div>
            <div class="admin-button"><a href=@Url.Action("Orders", "Admin")>Se alla beställningar</a></div>
        </article>
        <article class="admin-card">
            <div class="admin-text">
                <h3>Obetalda beställningar</h3>
                <h2>5st</h2>
            </div>
            <div class="admin-button"><a href=@Url.Action("Orders", "Admin", new { status = "Obetald"})>Obetalda beställningar</a></div>
            
        </article>
        <article class="admin-card">

            <div class="admin-text">
                <h3>Pågående beställningar</h3>
