            <div class="admin-button"><a href=@Url.Action("Orders", "Admin", new { status = "Hemleverans"})>Hemleveranser</a></div>

        </article>
        <article class="admin-card">
            <div class="admin-text">
                <h3>Lagersaldo</h3>
                <h2></h2>
            </div>
            <div class="admin-button">
                <a href=#>Gå till lagersaldon</a>
            </div>
        </article>
        <article class="admin-card">
            <div class="admin-text">
                <h3>Lägg till beställning</h3>
                <h2></h2>
            </div>
            <div class="admin-button"><a href=@Url.Action("CreateOrder", "Admin")>+ Skapa beställning</a></div>
        </article>

    </div>
</div>



