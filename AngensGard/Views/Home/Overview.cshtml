@model OrderViewModel

<h1>Översikt</h1>

<h2>Din beställning</h2>
<br />
<label>Orderdatum:</label>
<label>@Model.OrderDate</label>
<br />
<label>Namn:</label>
<label>@Model.Name</label>
<br />
<label>Adress:</label>
<label>@Model.Address</label>
<br />
<label>Postkod & Ort:</label>
<label>@Model.ZipCode</label>
<label>@Model.City</label>
<br />
<label>E-postadress:</label>
<label>@Model.Email</label>
<br />
<label>Telefonnummer:</label>
<label>@Model.PhoneNumber</label>
<br />
<label>Betalningsmetod:</label>
<label>@Model.Payment</label>
<br />

<table>
    <tr>
        <th>Produkt</th>
        <th>Pris</th>
    </tr>
    @foreach (var p in Model.OrderDetails.Products)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Price</td>
        </tr>
    }
    <tr>
        <td>Totalt</td>
        <td>@Model.OrderDetails.TotalPrice</td>
    </tr>
</table>
<br />





<a href="@Url.Action("Index", "Home")">Gå tillbaka</a>

<a href="@Url.Action("ConfirmOrder", "Home", @Model)">Beställ</a>











